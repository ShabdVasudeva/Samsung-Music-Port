<?xml version="1.0" encoding="utf-8"?>
<com.samsung.android.app.musiclibrary.ui.widget.OneUiConstraintLayout
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.samsung.android.app.musiclibrary.ui.widget.OneUiTextView
        android:textSize="17.0sp"
        android:textColor="@color/basics_text_main"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:layout_gravity="center_vertical"
        android:id="@id/sub_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18.0dip"
        android:layout_marginBottom="12.0dip"
        android:maxLines="1"
        android:includeFontPadding="false"
        android:layout_marginStart="24.0dip"
        app:layout_constraintBottom_toTopOf="@id/recycler_view"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:maxFontLevel="large"
        style="@style/Font.NewSEC.600" />
    <ImageView
        android:id="@id/sub_header_arrow"
        android:focusable="false"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/store_list_more_btn"
        android:importantForAccessibility="no"
        android:layout_marginStart="4.0dip"
        app:layout_constraintBottom_toBottomOf="@id/sub_header"
        app:layout_constraintStart_toEndOf="@id/sub_header"
        app:layout_constraintTop_toTopOf="@id/sub_header"
        app:tint="@color/basics_text_main" />
    <com.samsung.android.app.musiclibrary.ui.widget.OneUiRecyclerView
        android:id="@id/recycler_view"
        android:clipToPadding="false"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:nestedScrollingEnabled="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/sub_header" />
</com.samsung.android.app.musiclibrary.ui.widget.OneUiConstraintLayout>