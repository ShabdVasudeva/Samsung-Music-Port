<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    android:id="@id/card_item"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <TextView
        android:textSize="@dimen/edge_panel_text_size_big"
        android:id="@id/card_item_title"
        android:paddingTop="@dimen/edge_panel_card_view_margin_vertical"
        android:text="@string/recently_added"
        style="@style/EdgePanelCardViewText" />
    <TextView
        android:textSize="@dimen/edge_panel_text_size_small"
        android:id="@id/card_item_track_count"
        android:paddingBottom="@dimen/edge_panel_card_view_margin_vertical"
        style="@style/EdgePanelCardViewText" />
</LinearLayout>