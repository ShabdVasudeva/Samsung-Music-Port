<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:background="@color/about_activity_background_209_4_1"
    android:fitsSystemWindows="true"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
        <com.google.android.material.appbar.AppBarLayout
            android:id="@id/app_bar"
            android:background="@android:color/transparent"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            app:expanded="false"
            style="@style/Widget.Design.AppBarLayout">
            <com.google.android.material.appbar.CollapsingToolbarLayout
                android:id="@id/collapsing_app_bar"
                android:background="@android:color/transparent"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                app:layout_scrollFlags="scroll|exitUntilCollapsed"
                style="@style/BasicCollapsingToolbar">
                <androidx.appcompat.widget.Toolbar
                    android:layout_gravity="bottom"
                    android:id="@id/toolbar"
                    android:layout_width="fill_parent"
                    android:layout_height="?actionBarSize"
                    android:backgroundTint="@color/about_activity_background_209_4_1"
                    app:layout_collapseMode="pin" />
            </com.google.android.material.appbar.CollapsingToolbarLayout>
        </com.google.android.material.appbar.AppBarLayout>
        <androidx.core.widget.NestedScrollView
            android:id="@id/nested_scroll_view"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:fillViewport="true"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">
            <com.samsung.android.app.musiclibrary.ui.widget.OneUiConstraintLayout
                android:id="@id/permission_root"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="@dimen/privacy_permission_required_title_text"
                    android:textColor="@color/permission_description_209_17_3"
                    android:id="@id/required_permission_title"
                    android:layout_width="0.0dip"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0.0dip"
                    android:minHeight="@dimen/privacy_permission_required_title_min_height"
                    android:text="@string/permission_guide_desc"
                    android:layout_marginHorizontal="@dimen/privacy_permission_layout_margin_horizontal"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    style="@style/Font.NewSEC.400" />
                <LinearLayout
                    android:orientation="vertical"
                    android:id="@id/required_permission_root"
                    android:layout_width="0.0dip"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/privacy_permission_required_permission_root_margin_top"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/required_permission_title" />
                <TextView
                    android:textSize="@dimen/privacy_permission_required_title_text"
                    android:textColor="@color/permission_description_209_17_3"
                    android:id="@id/optional_permission_title"
                    android:layout_width="0.0dip"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/privacy_permission_category_margin_top"
                    android:minHeight="@dimen/privacy_permission_required_title_min_height"
                    android:text="@string/permission_optional_header"
                    android:layout_marginHorizontal="@dimen/privacy_permission_layout_margin_horizontal"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/required_permission_root"
                    style="@style/Font.NewSEC.400" />
                <LinearLayout
                    android:orientation="vertical"
                    android:id="@id/optional_permission_root"
                    android:layout_width="0.0dip"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/privacy_permission_required_permission_root_margin_top"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/optional_permission_title" />
                <com.samsung.android.app.musiclibrary.ui.widget.OneUiTextView
                    android:textSize="@dimen/help_permission_description_text_size_kt"
                    android:textColor="@color/permission_description_209_17_3"
                    android:id="@id/optional_permission_description"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/privacy_permission_category_margin_top"
                    android:text="@string/permission_optional_description"
                    android:layout_marginHorizontal="@dimen/privacy_permission_layout_margin_horizontal"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/optional_permission_root"
                    app:maxFontLevel="large"
                    style="@style/Font.NewSEC.400" />
                <android.widget.Space
                    android:id="@id/bottom_space"
                    android:layout_width="0.0dip"
                    android:layout_height="24.0dip"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/optional_permission_description" />
            </com.samsung.android.app.musiclibrary.ui.widget.OneUiConstraintLayout>
        </androidx.core.widget.NestedScrollView>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</androidx.constraintlayout.widget.ConstraintLayout>