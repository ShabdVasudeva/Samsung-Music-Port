<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:focusable="true"
    android:clickable="true"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:paddingEnd="@dimen/audio_quality_side_padding"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:layout_width="0.0dip"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/setting_cache_list_item_height_line"
        android:layout_weight="1.0">
        <TextView
            android:textSize="@dimen/setting_option_font_size"
            android:textColor="?android:textColorPrimary"
            android:id="@id/option_main_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/setting_use_cache"
            android:includeFontPadding="false"
            android:layout_marginStart="@dimen/settings_cache_sub_header_side_padding"
            style="@style/Font.NewSEC.400" />
    </LinearLayout>
    <androidx.appcompat.widget.SwitchCompat
        android:gravity="center"
        android:id="@id/settings_option_switch_button"
        android:focusable="false"
        android:clickable="false"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true" />
</LinearLayout>