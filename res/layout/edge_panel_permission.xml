<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:gravity="center"
    android:orientation="vertical"
    android:background="@color/edge_panel_background"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <TextView
        android:textSize="@dimen/edge_panel_permission_text_size"
        android:textColor="@color/edge_panel_text"
        android:gravity="center"
        android:id="@id/edge_permission_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/edge_permission_content"
        android:singleLine="false"
        android:textAlignment="center"
        android:layout_marginStart="@dimen/edge_panel_permission_text_margin_start"
        android:layout_marginEnd="@dimen/edge_panel_permission_text_margin_end"
        style="@style/Font.NewSEC.400" />
    <TextView
        android:textSize="@dimen/edge_panel_permission_button_text_size"
        android:textColor="@color/edge_panel_text"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:id="@id/edge_permission_button"
        android:background="@drawable/edge_panel_permission_allow_background"
        android:focusable="true"
        android:layout_width="@dimen/edge_panel_permission_button_width"
        android:layout_height="@dimen/edge_panel_permission_button_height"
        android:layout_marginTop="@dimen/edge_panel_permission_button_margin_top"
        android:text="@string/edge_permission_allow_button"
        android:singleLine="true"
        android:includeFontPadding="false"
        android:textAllCaps="true"
        android:textAlignment="center"
        style="@style/Font.NewSEC.600" />
</LinearLayout>