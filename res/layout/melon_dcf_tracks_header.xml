<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    android:paddingBottom="20.0dip"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    app:layout_scrollFlags="scroll|exitUntilCollapsed|noScrollHold"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:textSize="14.0dip"
        android:textColor="@color/melon_dcf_header_title"
        android:id="@id/dcf_subheader"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5.0dip"
        android:layout_marginBottom="5.0dip"
        android:text="@string/melon_dcf_subscription_usage"
        android:layout_marginStart="24.0dip"
        android:layout_marginEnd="24.0dip"
        style="@style/Font.NewSEC.600" />
    <LinearLayout
        android:gravity="center"
        android:orientation="horizontal"
        android:background="@drawable/melon_dcf_tracks_header_background"
        android:paddingTop="14.0dip"
        android:paddingBottom="14.0dip"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8.0dip"
        android:layout_marginStart="23.0dip"
        android:layout_marginEnd="25.0dip">
        <LinearLayout
            android:gravity="center"
            android:orientation="vertical"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1.0">
            <com.samsung.android.app.musiclibrary.ui.widget.OneUiTextView
                android:textSize="13.0sp"
                android:textColor="@color/melon_dcf_header_count_title"
                android:id="@id/header_left_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/available"
                app:maxFontLevel="large"
                style="@style/Font.NewSEC.400" />
            <com.samsung.android.app.musiclibrary.ui.widget.OneUiTextView
                android:textSize="18.0sp"
                android:textColor="@color/basics_text_main"
                android:id="@id/available"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                app:maxFontLevel="large"
                style="@style/Font.NewSEC.600" />
        </LinearLayout>
        <View
            android:background="@color/melon_dcf_header_divider"
            android:layout_width="1.0dip"
            android:layout_height="fill_parent" />
        <LinearLayout
            android:gravity="center"
            android:orientation="vertical"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1.0">
            <com.samsung.android.app.musiclibrary.ui.widget.OneUiTextView
                android:textSize="13.0sp"
                android:textColor="@color/melon_dcf_header_count_title"
                android:id="@id/header_right_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/total"
                app:maxFontLevel="large"
                style="@style/Font.NewSEC.400" />
            <com.samsung.android.app.musiclibrary.ui.widget.OneUiTextView
                android:textSize="18.0sp"
                android:textColor="@color/basics_text_main"
                android:id="@id/total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                app:maxFontLevel="large"
                style="@style/Font.NewSEC.600" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <View
            android:background="@drawable/melon_dcf_tracks_header_dot"
            android:layout_width="4.0dip"
            android:layout_height="4.0dip"
            android:layout_marginTop="10.0dip"
            android:layout_marginStart="33.0dip"
            android:layout_marginEnd="16.0dip" />
        <TextView
            android:textSize="16.0dip"
            android:id="@id/header_description"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:text="@string/melon_dcf_description"
            android:layout_weight="1.0"
            android:lineSpacingExtra="5.0dip"
            android:layout_marginEnd="24.0dip"
            style="@style/Font.NewSEC.400" />
    </LinearLayout>
</LinearLayout>