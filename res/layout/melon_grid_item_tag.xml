<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    android:background="@drawable/melon_tag_background"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <TextView
        android:textSize="@dimen/melon_grid_item_tag_text_size"
        android:textColor="@color/melon_grid_item_tag_text_color"
        android:ellipsize="none"
        android:gravity="center"
        android:id="@id/text1"
        android:background="?android:selectableItemBackground"
        android:paddingLeft="@dimen/melon_grid_item_tag_space_horizontal"
        android:paddingRight="@dimen/melon_grid_item_tag_space_horizontal"
        android:duplicateParentState="true"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/melon_grid_item_tag_height"
        android:singleLine="true"
        android:includeFontPadding="false"
        style="@style/Font.NewSEC.400.GridItem.Line1" />
</FrameLayout>