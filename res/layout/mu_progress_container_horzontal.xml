<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@id/category_title_main"
    android:paddingTop="@dimen/winset_dialog_body_padding_vertical"
    android:paddingBottom="@dimen/winset_dialog_body_padding_vertical"
    android:layout_width="fill_parent"
    android:layout_height="@dimen/winset_dialog_title_height"
    android:paddingStart="@dimen/winset_dialog_body_padding_horizontal"
    android:paddingEnd="@dimen/winset_dialog_body_padding_horizontal"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <androidx.appcompat.widget.SeslProgressBar
        android:id="@id/loading_progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        style="?android:progressBarStyleInverse" />
    <TextView
        android:id="@id/category_title"
        android:text="@string/processing"
        android:layout_centerVertical="true"
        android:paddingStart="@dimen/winset_dialog_body_padding_horizontal"
        android:layout_toEndOf="@id/loading_progress_bar"
        style="@style/Font.NewSEC.400.DialogBodyText" />
</RelativeLayout>